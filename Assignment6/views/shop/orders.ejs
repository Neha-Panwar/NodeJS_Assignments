<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(orders.length <= 0) { %>
            <h1>Nothing there!</h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order => {%>
                    <li>
                        <h1># <%= order.id %> - <a href="/orders/<%= order.id %>">Invoice</a></h1>
                        <ul>
                            <% order.orderItems.forEach(item => { %>
                                <li>
                                    <%= item.productname %> (<%= item.quantity %>)
                                </li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
    
    <%- include('../includes/end.ejs') %>
